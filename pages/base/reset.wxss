/*基础样式*/
page{ background-color: #f8f8f8; font-size: 16px;}
page .wx-checkbox-input{ width: 20px; height: 20px; border-radius: 50%; }
page .wx-checkbox-input.wx-checkbox-input-checked{border-color:#F60; background-color: #F60;  }
page .wx-checkbox-input.wx-checkbox-input-checked::before{ font-size: 16px; color: #FFF;}

page .wx-radio-input { width: 20px; height: 20px;}
page .wx-radio-input.wx-radio-input-checked{background-color: #F60 !important; border-color: #F60 !important;}


.navigator-hover{background-color: rgba(0,0,0,0);}
image{ max-width: 100%; vertical-align: top;}
button[type="primary"] { background-color: #F60;}
.button-hover[type="primary"]{ background-color: #ed5f00;}

button[type="primary"][plain] { border-color: #F60; color: #F60;}
.button-hover[type="primary"][plain] { border-color: #F93; color: #F93;}

.weui-loadmore{width: auto; margin:0; padding: 15px;}



/* 常用 */
.clearfix:before,.clearfix:after { content: " "; display: block; height: 0; clear: both; visibility: hidden; }
.ellipsis{overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}
.ellipsis-2{overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-box-orient: vertical;  -webkit-line-clamp: 2;}
.clearlist{ margin: 0; padding: 0; list-style: none;}

.img4-3 { display: block; position: relative; }
.img4-3:after { display: block; padding-top: 75%; content: ''; }
.img4-3 image { width: 100%; height: 100%; position: absolute; left: 0; top: 0; }

.img1-1 { display: block; position: relative; }
.img1-1:after { display: block; padding-top: 100%; content: ''; }
.img1-1 image { width: 100%; height: 100%; position: absolute; left: 0; top: 0; }

.text-primary{ color: #F60;}
.text-red{ color: #F00;}
.weui-hidden{ display: none !important;}
.weui-show{ display: block !important;}

.mt10{ margin-top: 10px !important;}

/* 页面容器 */
.weui-content{}
.weui-content-padded{ margin:15px;}

/* 上下导航 */
.weui-bar{ width: 100%; height: 45px; line-height: 45px; background-color: #FFF; box-sizing: border-box; position: fixed; left: 0; z-index: 9;}
.weui-bar:after{ content: ""; height: 1px; background-color: #CCC; -webkit-transform: scaleY(0.5); position: absolute; left: 0; right: 0; z-index: -1;}

.weui-bar-header{  top: 0; }
.weui-bar-header:after{ bottom: 0;}
.weui-bar-header~.weui-content{padding-top: 45px;}

.weui-bar-footer{ height: 45px; bottom: 0;}
.weui-bar-footer:after{ top: 0;}
.weui-bar-footer~.weui-content{ padding-bottom: 45px;}

/* 轮播小圆点 */
swiper .wx-swiper-dot{ width:6px; height: 6px;   background-color: rgba(255,255,255,0.5) !important;}
swiper .wx-swiper-dot-active{ background-color: #FFF !important;}

/* 底部加载 */
.loading{ padding: 10px; text-align: center; font-size: 12px; color: #999;}

/*单页*/
.singlepage{ margin: 10px 0 0; background-color: #FFF; padding: 15px;}
.singlepage-title{margin-top: 20px; text-align: center; font-size: 20px; font-weight: 500; line-height: 1.4;}
.singlepage-date{margin-top: 6px; text-align: center; font-size: 14px; color:#999;}
.singlepage-title ~ .singlepage-cont{ margin-top: 15px;}
.singlepage-cont{ padding-bottom: 10px; line-height: 1.8;}

/* 返回顶部按钮 */
.totop{width: 46px; height: 46px; background-color: rgba(0,0,0,0.7); border-radius: 50%; text-align: center; font-size: 18px; line-height: 46px; color: #FFF; position: fixed; right: 10px; bottom: 30px; z-index: 10;}
